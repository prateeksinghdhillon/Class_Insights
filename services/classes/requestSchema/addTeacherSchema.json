{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-zA-Z]+([ ]?[a-zA-Z]+)+?$"
        },
        "gender": {
            "type": "string",
            "minLength": 1,
            "enum": [
                "male",
                "female",
                "other"
            ]
        },
        "emailId": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-zA-Z\\d.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z\\d-]+(?:\\.[a-zA-Z\\d-]+)*$"
        },
        "contactNumber": {
            "type": "string",
            "minLength": 10,
            "pattern": "^\\d*$"
        },
        "experience": {
            "type": "string",
            "minLength": 1,
            "pattern": "[+-]?([0-9]*[.])?[0-9]+"
        },
        "subject": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            }
        },
        "classCoordinated": {
            "type": "string",
            "minLength": 1
        },
        "classIds": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            }
        },
        "emergencyContactNumber": {
            "type": "string",
            "minLength": 10,
            "pattern": "^\\d*$"
        },
        "medicalHistory": {
            "type": "string",
            "minLength": 10
        },
        "designation": {
            "type": "string",
            "minLength": 1
        },
        "dob": {
            "type": "string",
            "minLength": 8,
            "maxLength": 8,
            "pattern": "^\\d*$"
        },
        "bloodGroup": {
            "type": "string",
            "minLength": 1
        },
        "currentAdressSameAsPermanent": {
            "type": "boolean"
        },
        "currentAddress": {
            "type": "object",
            "properties": {
                "addressLine1": {
                    "type": "string",
                    "minLength": 10
                },
                "addressLine2": {
                    "type": "string",
                    "minLength": 10
                },
                "city": {
                    "type": "string",
                    "minLength": 1
                },
                "pinCode": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^\\d*$"
                },
                "state": {
                    "type": "string",
                    "minLength": 1
                },
                "country": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "additionalProperties": false,
            "required": [
                "country",
                "state",
                "pinCode",
                "city",
                "addressLine1"
            ]
        },
        "permanentAddress": {
            "type": "object",
            "properties": {
                "addressLine1": {
                    "type": "string",
                    "minLength": 10
                },
                "addressLine2": {
                    "type": "string",
                    "minLength": 10
                },
                "city": {
                    "type": "string",
                    "minLength": 1
                },
                "pinCode": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^\\d*$"
                },
                "state": {
                    "type": "string",
                    "minLength": 1
                },
                "country": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "additionalProperties": false,
            "required": [
                "country",
                "state",
                "pinCode",
                "city",
                "addressLine1"
            ]
        },
        "house": {
            "type": "string",
            "minLength": 1
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "gender",
        "contactNumber",
        "experience",
        "subject",
        "emailId"
    ]
}