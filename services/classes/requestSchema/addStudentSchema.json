{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-zA-Z]+([ ]?[a-zA-Z]+)+?$"
        },
        "gender": {
            "type": "string",
            "minLength": 1,
            "enum": [
                "male",
                "female",
                "other"
            ]
        },
        "emailId": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-zA-Z\\d.!#$%&’*+/=?^_`{|}~-]+@[a-zA-Z\\d-]+(?:\\.[a-zA-Z\\d-]+)*$"
        },
        "contactNumber": {
            "type": "string",
            "minLength": 10,
            "pattern": "^\\d*$"
        },
        "guardianContactNumber": {
            "type": "string",
            "minLength": 10,
            "pattern": "^\\d*$"
        },
        "fatherName": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-zA-Z]+([ ]?[a-zA-Z]+)+?$"
        },
        "motherName": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-zA-Z]+([ ]?[a-zA-Z]+)+?$"
        },
        "schoolSiralNumber": {
            "type": "string",
            "pattern": "^\\d*$"
        },
        "classId": {
            "type": "string",
            "minLength": 1
        },
        "emergencyContactNumber": {
            "type": "string",
            "minLength": 10,
            "pattern": "^\\d*$"
        },
        "medicalHistory": {
            "type": "string",
            "minLength": 10
        },
        "dob": {
            "type": "string",
            "minLength": 8,
            "maxLength": 8,
            "pattern": "^\\d*$"
        },
        "bloodGroup": {
            "type": "string",
            "minLength": 1
        },
        "currentAdressSameAsPermanent": {
            "type": "boolean"
        },
        "currentAddress": {
            "type": "object",
            "properties": {
                "addressLine1": {
                    "type": "string",
                    "minLength": 10
                },
                "addressLine2": {
                    "type": "string",
                    "minLength": 10
                },
                "city": {
                    "type": "string",
                    "minLength": 1
                },
                "pinCode": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^\\d*$"
                },
                "state": {
                    "type": "string",
                    "minLength": 1
                },
                "country": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "additionalProperties": false,
            "required": [
                "country",
                "state",
                "pinCode",
                "city",
                "addressLine1"
            ]
        },
        "permanentAddress": {
            "type": "object",
            "properties": {
                "addressLine1": {
                    "type": "string",
                    "minLength": 10
                },
                "addressLine2": {
                    "type": "string",
                    "minLength": 10
                },
                "city": {
                    "type": "string",
                    "minLength": 1
                },
                "pinCode": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^\\d*$"
                },
                "state": {
                    "type": "string",
                    "minLength": 1
                },
                "country": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "additionalProperties": false,
            "required": [
                "country",
                "state",
                "pinCode",
                "city",
                "addressLine1"
            ]
        },
        "house": {
            "type": "string",
            "minLength": 1
        },
        "weight": {
            "type": "string",
            "minLength": 1
        },
        "height": {
            "type": "string",
            "minLength": 1
        },
        "modeOfTransport": {
            "type": "string",
            "minLength": 1
        },
        "skills": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            }
        },
        "hobbies": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            }
        },
        "guardianEmail": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-zA-Z\\d.!#$%&’*+/=?^_`{|}~-]+@[a-zA-Z\\d-]+(?:\\.[a-zA-Z\\d-]+)*$"
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "gender",
        "contactNumber",
        "motherName",
        "fatherName",
        "dob",
        "classId",
        "medicalHistory",
        "guardianContactNumber",
        "emergencyContactNumber",
        "bloodGroup",
        "guardianEmail",
        "currentAdressSameAsPermanent",
        "permanentAddress",
        "currentAddress"
    ]
}