{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "schoolName": {
      "type": "string",
      "minLength": 4,
      "pattern": "^[a-z A-Z]*$"
    },
    "countryCode": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(\\+?\\d{1,3}|\\d{1,4})$"
    },
    "contactNumber": {
      "type": "string",
      "minLength": 10,
      "pattern": "^\\d*$"
    },
    "addressLine1": {
      "type": "string",
      "minLength": 8,
      "maxLength": 50
    },
    "addressLine2": {
      "type": "string"
    },
    "city": {
      "type": "string",
      "minLength": 2
    },
    "state": {
      "type": "string",
      "minLength": 2
    },
    "pinCode": {
      "type": "string",
      "minLength": 2
    },
    "country": {
      "type": "string",
      "minLength": 2
    },
    "establishedYear": {
      "type": "string",
      "minLength": 4
    },
    "enlister": {
      "type": "string",
      "minLength": 4,
      "pattern": "^[a-z A-Z]*$"
    },
    "enlisterEmail": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-zA-Z\\d.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z\\d-]+(?:\\.[a-zA-Z\\d-]+)*$"
    },
    "enlisterPassword": {
      "type": "string",
      "minLength": 8,
      "pattern": "^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\\s).{8,15}$"
    }
  },
  "additionalProperties": false,
  "required": [
    "schoolName",
    "contactNumber",
    "countryCode",
    "addressLine1",
    "city",
    "state",
    "pinCode",
    "country",
    "establishedYear",
    "enlister",
    "enlisterEmail"
  ]
}