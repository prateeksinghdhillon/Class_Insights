                "admin",
                "teacher"
            ]
        },
        "emailId": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-zA-Z\\d.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z\\d-]+(?:\\.[a-zA-Z\\d-]+)*$"
        },
