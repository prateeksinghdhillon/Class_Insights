{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "oldPassword": {
            "type": "string",
            "minLength": 8,
            "pattern": "^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\\s).{8,15}$"
        },
        "newPassword": {
            "type": "string",
            "minLength": 8,
            "pattern": "^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\\s).{8,15}$"
        },
        "confirmNewPassword": {
            "type": "string",
            "minLength": 8,
            "pattern": "^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\\s).{8,15}$"
        }
    },
    "additionalProperties": false,
    "required": [
        "oldPassword",
        "newPassword",
        "confirmNewPassword"
    ]
}