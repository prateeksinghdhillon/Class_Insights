{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "schoolId": {
            "type": "number",
            "minimum": 4
        },
        "emailId": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-zA-Z\\d.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z\\d-]+(?:\\.[a-zA-Z\\d-]+)*$"
        },
        "newPassword": {
            "type": "string",
            "minLength": 8,
            "pattern": "^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\\s).{8,15}$"
        },
        "confirmNewPassword": {
            "type": "string",
            "minLength": 8,
            "pattern": "^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\\s).{8,15}$"
        }
    },
    "additionalProperties": false,
    "required": [
        "emailId",
        "newPassword",
        "confirmNewPassword",
        "schoolId"
    ]
}